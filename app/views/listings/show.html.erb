<h2>Title: <%= @listing.title%></h2>
<p><%@listing.amenities.each do |a| %>
	<%= a %>.
	<%end%></p>
	<p>Description: <%= @listing.description%></p>
	<p>Property Type: <%= @listing.property_type%></p>

	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators">
			<% @listing.photos.size.times do |counter| %>
			<% if counter == 0 %>
			<li data-target="#carouselExampleIndicators" data-slide-to="<%= counter %>" class="active"></li>
			<% else %>
			<li data-target="#carouselExampleIndicators" data-slide-to="<%= counter %>"></li>
			<% end %> 
			<% end %>
		</ol>

		<div class="carousel-inner">
			<% @listing.photos.each_with_index do |photo, index| %>
			<% if index == 0 %>
			<div class="carousel-item active">
				<% else %>
				<div class='carousel-item'>
					<% end %>
					<img class="d-block w-40" src="<%= photo.url %>">
				</div>
				<% end %>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>

	<p>Guests Capacity: <%= @listing.guests_capacity%></p>
	<p>Number of Bedrooms: <%= @listing.bedroom_number%></p>
	<p>Number of Bathrooms: <%= @listing.bathroom%></p>
	<p>Location: <%= @listing.town_city%>, <%= @listing.postcode%>, <%= @listing.country%></p>
	<p>Address: <%= @listing.address%></p>
	<p>Price: <%= @listing.prices%></p>

<%= link_to "Delete this listing", @listing, method: :delete, data:{confirm: "Are you sure?"}%><br>

<%= link_to "Update your listing", edit_listing_path%><br>

<%= link_to "See other listings", listings_path%>